{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "sourceMap": true,
        "declaration": true,
        "lib": ["ES6", "DOM", "DOM.Iterable", "ES2017"],
        "outDir": "./dist/",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports" : true,
        "strictFunctionTypes": false,
        "esModuleInterop" : true,
        "allowJs": true,
        "strict": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/tests/*", "**/test-data/*"]
}