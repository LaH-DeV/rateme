{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "sourceMap": true,
        "declaration": true,
        "outDir": "./dist/es",
        "declarationDir": "./types",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports" : true,
        "strictFunctionTypes": false,
        "esModuleInterop" : true,
        "allowJs": true,
        "strict": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/tests/*", "**/test-data/*"]
}