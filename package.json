{
    "name": "@lah/rateme",
    "version": "0.0.1",
    "description": "RateMe is a simple star rating component written in TypeScript.",
    "main": "dist/cjs/index.js",
    "type": "commonjs",
    "module": "./dist/es/index.js",
    "types": "dist/index.d.ts",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/LaH-DeV/rateme.git"
    },
    "bugs": {
        "url": "https://github.com/LaH-DeV/rateme/issues"
    },
    "homepage": "https://github.com/LaH-DeV/rateme#readme",
    "scripts": {
        "runBat": "libFix.bat",
        "compileScripts": "npx webpack --config webpack.config.js",
        "compileStyles": "sass --style=compressed src/index.rateme.scss:/dist/styles/index.rateme.min.css && npm run runBat",
        "build": "npm run compileScripts && npm run compileStyles",
        "test": "jest --config jestconfig.json",
        "lint": "tslint -p tsconfig.json",
        "format": "prettier --write \"src/**/*.ts\"",
        "prepare": "npm run build",
        "prepublishOnly": "npm test && npm run lint",
        "preversion": "npm run lint",
        "version": "npm run format && git add -A src",
        "postversion": "git push && git push --tags"
    },
    "author": "Przemys≈Çaw Dylewski <lahpolon.dev@gmail.com>",
    "license": "ISC",
    "files": [
        "dist",
        "types",
        "README.md"
    ],
    "devDependencies": {
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0",
        "terser-webpack-plugin": "^5.3.3",
        "typescript": "^4.7.4",
        "ts-loader": "^9.3.1",
        "sass": "^1.54.0"
    }
}
